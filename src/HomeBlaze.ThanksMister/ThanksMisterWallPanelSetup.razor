@using System.Threading;
@using HomeBlaze.Abstractions.Attributes
@using HomeBlaze.Components;
@using MudBlazor;

@attribute [ThingSetup(typeof(ThanksMisterWallPanel), CanEdit = true)]
@inherits ThingSetupComponent<ThanksMisterWallPanel>

<MudForm @ref="Form">
    <MudTextField @bind-Value="@Thing.Host" Label="Host" Required="true" />
    <MudTextField @bind-Value="@Thing.Port" Label="Port" Required="true" />

    <br />
    <MudSwitch @bind-Value="@Thing.RelaunchOnStartup" Label="Relaunch on Startup" Color="Color.Info" />
</MudForm>
