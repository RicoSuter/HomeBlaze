@using System.Threading;
@using HomeBlaze.Components;
@using MudBlazor;

@inherits ThingSetupComponent<MqttBroker>

<MudForm @bind-IsValid="_isFormValid">
    <MudTextField @bind-Value="@Thing.Title" Label="Title" Required="true" />
    <MudTextField @bind-Value="@Thing.Port" Label="Port" Required="true"
                  Disabled="IsEditing" InputType="InputType.Number" />
</MudForm>

@code {
    private bool _isFormValid;

    public override bool IsValid => _isFormValid;
}
