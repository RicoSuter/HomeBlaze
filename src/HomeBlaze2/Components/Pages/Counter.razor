@page "/counter"
@using HomeBlaze2.Host
@using Namotion.Shelly

@inject Things Things
@inject IHttpClientFactory HttpClientFactory
@inject ILogger<ShellyDevice> Logger

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;

        var shelly = new ShellyDevice(HttpClientFactory, Logger)
        {
            IpAddress = "192.168.1.133"
        };

        shelly.StartAsync(CancellationToken.None);
        
        Things.AddThing("shelly", shelly);
        
        InvokeAsync(StateHasChanged);
    }

}