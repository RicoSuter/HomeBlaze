@using HomeBlaze.AsusRouter
@using HomeBlaze.Components
@using MudBlazor

@inherits ThingSetupComponent<AsusRouter>

<MudForm @bind-IsValid="_isFormValid">
    <MudTextField @bind-Value="@Thing.Host" Label="Host" Required="true" />
    <MudTextField @bind-Value="@Thing.Username" Label="Username" Required="true" />
    <MudTextField @bind-Value="@Thing.Password" Label="Password" InputType="InputType.Password" Required="true" />
</MudForm>

@code {
    private bool _isFormValid;

    public override bool IsValid => _isFormValid;
}
