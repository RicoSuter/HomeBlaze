@using MudBlazor

@using HomeBlaze.Abstractions.Attributes
@using HomeBlaze.Components;
@using HomeBlaze.Components.Editors;

@attribute [ThingSetup(typeof(ButtonWidget))]
@inherits ThingSetupComponent<ButtonWidget>

<MudForm @ref="Form">
    <MudTextField @bind-Value="@Thing.Label" Label="Title" />
    <br />

    <MudTextField @bind-Value="@Thing.Width" Label="Width" />
    <MudTextField @bind-Value="@Thing.Height" Label="Height" />

    <br />
    <h2>Operation</h2>
    <OperationEditor Operation="@Thing.Operation" Required="true" />
</MudForm>
