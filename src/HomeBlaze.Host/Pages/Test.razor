@page "/test"

@using HomeBlaze.Abstractions.Services;
@using HomeBlaze.Dynamic;

@inject IThingManager ThingManager

@if (_automation != null)
{
    <AutomationSetup EditedThing="_automation"></AutomationSetup>
}

@code {
    Automation? _automation;

    protected override void OnInitialized()
    {
        _automation = ThingManager.AllThings.OfType<Automation>().FirstOrDefault();
    }
}
