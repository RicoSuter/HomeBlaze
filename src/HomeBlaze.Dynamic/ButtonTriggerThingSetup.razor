@using HomeBlaze.Abstractions.Attributes
@using HomeBlaze.Components;
@using HomeBlaze.Components.Editors
@using HomeBlaze.Components.Inputs
@using MudBlazor

@attribute [ThingSetup(typeof(ButtonTriggerThing), CanEdit = true, CanClone = true)]
@inherits ThingSetupComponent<ButtonTriggerThing>

<MudForm @ref="Form">
    <MudTextField @bind-Value="@Thing.Title" Label="Title" Required="true" />
    <br />

    <MudSwitch @bind-Value="@Thing.IsEnabled" Label="Enabled" Color="Color.Info" T="bool" />
    <br />

    <MudTabs>
        <MudTabPanel Text="Operations">
            <br />
            <OperationListEditor Operations="Thing.Operations"></OperationListEditor>
        </MudTabPanel>
    </MudTabs>
</MudForm>
